[Unit]
Description=Puppet Data Service server
After=network.target

[Service]
Type=simple
User=pds-server
WorkingDirectory=/opt/puppetlabs/server/apps/pds-server
ExecStart=/opt/puppetlabs/puppet/bin/bundle exec puma -C config/puma.rb -e production
Restart=always

[Install]
WantedBy=multi-user.target
